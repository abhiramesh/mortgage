		<div class="extra-content-3">
				<div class="form">
					<%= form_for @user, remote: true, :method => :put, :html => {:id => "form-3" } do |f| %>
						<div class="row">
							<div class="span2">
								<%= f.label :zipcode %>
								<%= f.text_field :zipcode, placeholder: "Zipcode", :style => "width:120px;" %>
							</div>
						</div>
						<div class="message" id="zip_error"></div>
					 		<%= f.submit "Next", :class => "submit-3", :id => "submit-part-3" %>
						<% end %>
						<div class="back-link" id="back-link-2">Back</div>
				</div>
			</div>
			<script type="text/javascript">
			$('input#user_zipcode').blur(function(event){
			    var zipRegex = /^\d{5}$/;
			    if (!zipRegex.test($('input#user_zipcode').val())) {
			      event.preventDefault();
			      $('#zip_error').empty().append("Please enter a valid zipcode");
			    }
			    if (zipRegex.test($('input#user_zipcode').val())) {
			      $('#zip_error').empty();
			    }
			  });
			  $('#submit-part-3').click(function(event){
			    var zipRegex = /^\d{5}$/;
			    if (!zipRegex.test($('input#user_zipcode').val())) {
			      event.preventDefault();
			      $('#zip_error').empty().append("Please enter a valid zipcode");
			    }
			  });
			  $('#back-link-2').click(function(){
					$('.extra-content-3').hide();
					$('.extra-content-2').show().insertAfter('div.ribbon-content');
			  });
			</script>
	